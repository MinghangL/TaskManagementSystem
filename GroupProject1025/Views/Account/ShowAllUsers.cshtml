@model List<GroupProject1025.Models.ApplicationUser>

@{
    ViewBag.Title = "ShowAllUsers";
}

<h2>Show All Users</h2>

@*<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <h2>Index</h2>*@

<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            User Name
        </th>

        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>

            <td>
                @Html.ActionLink("GetAllRolesForUser", "GetAllRolesForUser", new { UserId = item.Id }) |
                @Html.ActionLink("AssignRolesToUser", "AssignRolesToUser", new { UserId = item.Id })  |
                @Html.ActionLink("ShowUserDetails", "ShowUserDetails", new { UserId = item.Id })
                @* @Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Back to Home", "Index", "Home")
</p>
