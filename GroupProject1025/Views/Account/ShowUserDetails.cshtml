@*@model GroupProject1025.Models.ApplicationUser*@
@model GroupProject1025.Models.UserDetailsViewModel
@{
    ViewBag.Title = "ShowUserDetails";
}

<h2>Show User Details</h2>
<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.UserName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.Salary)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.Salary)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.User.PMAllowance)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.User.PMAllowance)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Roles)
        </dt>

        <dd>
            <ul>

            @foreach (var item in Model.Roles)
            {
                <li>
                    @item
                </li>
            }
            </ul>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "ShowAllUsers")
</p>

